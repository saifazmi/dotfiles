# i3-gaps
gaps inner 6
smart_gaps on
## Gaps modification shortcuts
bindsym $mod+bracketleft  gaps inner all minus 2
bindsym $mod+bracketright gaps inner all plus 2

# Screen locker
set $lock ~/.config/i3/lock.sh && sleep 1

# Power control mode
set $power_control "[l]ock log[o]ut [s]uspend [r]eboot [p]oweroff"
mode  $power_control {
	bindsym l exec --no-startup-id $lock;               mode "default"
    bindsym o exec --no-startup-id i3-msg exit;         mode "default"
    bindsym s exec --no-startup-id systemctl suspend; 	mode "default"
    bindsym r exec --no-startup-id systemctl reboot;	mode "default"
    bindsym p exec --no-startup-id systemctl poweroff; 	mode "default"
	
	# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+x mode $power_control

# Monitor control mode
set $monitor_control "[p]rimary [s]econdary [m]irror extend [j][k][l][;] or [cursor-keys]"
mode $monitor_control {
	bindsym p exec mons -o;	mode "default"
	bindsym s exec mons -s;	mode "default"
	bindsym m exec mons -m; mode "default"
	
	## Extend monitor
	bindsym j exec mons -e left;		    mode "default"
	bindsym k exec mons -e bottom;		    mode "default"
	bindsym l exec mons -e top;		        mode "default"
	bindsym semicolon exec mons -e right;	mode "default" 
	## Alternatively you can use cursor keys
	bindsym Left exec mons -e left;		mode "default"
	bindsym Down exec mons -e bottom;	mode "default"
	bindsym Up exec mons -e top;		mode "default"
	bindsym Right exec mons -e right;	mode "default"
	
	bindsym Return mode "default"
    bindsym Escape mode "default"
}
## XF86Display is not working
bindsym $mod+m mode $monitor_control 

# Toggle through every monitor setting
bindsym $mod+Shift+m exec mons -n right

# Audio controls (volume up, volume down, toggle mute)
bindsym XF86AudioRaiseVolume exec amixer -q set Master on 2%+ && pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q set Master 2%-    && pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioMute 	     exec amixer -q set Master toggle && pkill -SIGRTMIN+10 i3blocks

# Media keys
bindsym XF86AudioPlay exec playerctl play-pause && pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioNext exec playerctl next       && pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioPrev exec playerctl previous   && pkill -SIGRTMIN+10 i3blocks

# Sreen brightness controls (brightness up, brightness down)
bindsym XF86MonBrightnessUp   exec light -A 2
bindsym XF86MonBrightnessDown exec light -U 2

# Printscreen saves screenshot (with shift only focused window)
## break this down into a screenshot mode just like the powersection above
bindsym --release Print       	   exec --no-startup-id scrot ~/Pictures/screenshots/screenshot-%Y-%m-%d-%T.png
bindsym --release Shift+Print 	   exec --no-startup-id scrot -u ~/Pictures/screenshots/windowshot-%Y-%m-%d-%T.png
bindsym --release $mod+Shift+Print exec --no-startup-id scrot -s ~/Pictures/screenshots/clipped-%Y-%m-%d-%T.png 

# Move focused workspace between monitors
bindsym $mod+Shift+greater move workspace to output right
bindsym $mod+Shift+less move workspace to output left

# Window focus
focus_follows_mouse no

